#:kivy 2.3.0

#Gestart op 22 oktober 2024

WindowManager:
    StartWindow:
    MainWindow:

<StartWindow>:
    name: "start"

    FloatLayout:

        MDLabel:
            text: "Time Spent On"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            font_style: "H3"
            halign: "center"
        
        MDRaisedButton:
            text: "Initiate"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.3, 0.2
            font_style: "H4"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"

<MainWindow>:
    name: "main"
        
    MDGridLayout:
        cols: 4

        MDGridLayout:
            cols: 1

            MDTextField:
                #mode: "outlined"
                
            MDRectangleFlatButton:
                text: "Confirm"
            
        MDTextField:
            text: "New Subject"

        MDRectangleFlatButton:
            text: "Add Time"
            
        MDLabel:
            text: "Time: "