#:kivy 2.3.0

#Gestart op 22 oktober 2024

WindowManager:
    StartWindow:
    MainWindow:

<StartWindow>:
    name: "start"

    FloatLayout:

        MDLabel:
            text: "Time Spent On"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            font_style: "H3"
            halign: "center"
        
        MDRaisedButton:
            text: "Initiate"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.3, 0.2
            font_style: "H4"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"

<MainWindow>:
    name: "main"

    FloatLayout:

        MDRectangleFlatButton:
            text: "Back"
            pos_hint: {"center_x": 0.9, "center_y": 0.9}
            size_hint: None, None
            size: "100dp", "100dp"
            line_color: [0, 0, 0, 0]
            md_bg_color: app.theme_cls.primary_dark
            font_style: "H6"
            on_release:
                app.root.current = "start"
                root.manager.transition.direction = "right"